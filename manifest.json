{
  "manifest_version": 3,
  "name": "Word Highlighter",
  "version": "22.0",
  "description": "Highlights configured words with specified colors.",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }],
  "options_page": "hello.html"
}

